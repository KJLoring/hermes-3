nout = 15
timestep = 20

MYG = 0  # No guard cells in Y, 2D simulation

[mesh]
nx = 50
ny = 1
nz = 50

yn = y / (2π)
zn = z / (2π)

[solver]
mxstep = 1000

[hermes]
components = evolve_ne, isothermal_electrons, vorticity, sheath_closure

[evolve_ne]
poloidal_flows = false  # Y flows due to ExB

[Ne]
function = exp(-(x - 0.5)^2 - (mesh:zn - 0.5)^2)

[isothermal_electrons]
temperature = 10  # Temperature in eV

[vorticity]

diamagnetic = true
diamagnetic_polarisation = false
average_atomic_mass = 2.0
split_n0 = false

